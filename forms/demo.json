{
  "id": "demo",
  "title": "Reference POC Collection (Loop Demo)",
  "description": "Hi {{candidate_name}}! We need to collect contact details for {{target_count}} professional references for your position at {{agency_name}}. Let's get started!",
  "fields": [
    {
      "id": "ref_name",
      "type": "text",
      "label": "What is your reference's full name?",
      "required": true
    },
    {
      "id": "ref_email",
      "type": "text",
      "label": "What is their email?",
      "required": true,
      "validation": { "kind": "email" }
    },
    {
      "id": "ref_relationship",
      "type": "select",
      "label": "How do you know them?",
      "required": true,
      "options": [
        "supervisor",
        "client",
        "coworker",
        "friend",
        "family",
        "other"
      ]
    },
    {
      "id": "ref_relationship_explanation",
      "type": "text",
      "label": "Briefly describe your relationship (optional).",
      "required": false
    }
  ]
}

